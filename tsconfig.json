{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "./dist/",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "ES2015"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/__tests__", "src/**/mocks", "src/**/*.test.ts"]
}
